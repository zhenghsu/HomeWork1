@model IEnumerable<Test1.Models.vw_GetCuAllData>

@{
    ViewBag.Title = "SearchIndex";
}

<h2>SearchIndex</h2>

<p>
   
    @using (Html.BeginForm())
    {
    <p>
        Title: @Html.TextBox("keyword")<br />
        <input type="submit" value="Filter" />
    </p>
    }
</p>
<table class="table">
    <tr>
        <th>
            客戶名稱
        </th>
        <th>
            聯絡人數量
        </th>
        <th>
            銀行帳戶數量
        </th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.客戶名稱)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CountContactNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CountBankNumber)
        </td>

    </tr>
}

</table>
